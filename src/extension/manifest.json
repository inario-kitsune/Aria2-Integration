{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.5.0",
  "default_locale": "en",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "downloads",
    "downloads.open",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["lib/aria2.bundle.js", "lib/tools.js", "config.js", "common.js"]
  },
  "browser_action": {
    "default_popup": "data/action/index.html",
    "default_icon": {
      "16": "data/icons/disabled/16.png",
      "32": "data/icons/disabled/32.png",
      "64": "data/icons/disabled/64.png",
      "128": "data/icons/disabled/128.png",
      "256": "data/icons/disabled/256.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },
  "homepage_url": "https://github.com/inario-kitsune/Aria2-Integration",
  "options_ui": {
    "page": "data/options/menu.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["data/content/altKeyDetector.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "{588549ab-78d4-4413-aa1f-b7c433eec2a1}",
      "strict_min_version": "58.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}
